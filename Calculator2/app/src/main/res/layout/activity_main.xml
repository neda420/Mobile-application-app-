<!-- res/layout/activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <EditText
        android:id="@+id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="16dp"
        android:hint="0"
        android:gravity="right"
        android:textSize="24sp"
        android:inputType="none" />

    <GridLayout
        android:layout_below="@id/result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="4"
        android:layout_marginTop="16dp">

        <!-- Add number and operator buttons here -->
        <!-- Number buttons -->
        <Button android:text="1" android:onClick="onButtonClick" android:layout_row="1" android:layout_column="0"/>
        <Button android:text="2" android:onClick="onButtonClick" android:layout_row="1" android:layout_column="1"/>
        <Button android:text="3" android:onClick="onButtonClick" android:layout_row="1" android:layout_column="2"/>
        <Button android:text="4" android:onClick="onButtonClick" android:layout_row="2" android:layout_column="0"/>
        <Button android:text="5" android:onClick="onButtonClick" android:layout_row="2" android:layout_column="1"/>
        <Button android:text="6" android:onClick="onButtonClick" android:layout_row="2" android:layout_column="2"/>
        <Button android:text="7" android:onClick="onButtonClick" android:layout_row="3" android:layout_column="0"/>
        <Button android:text="8" android:onClick="onButtonClick" android:layout_row="3" android:layout_column="1"/>
        <Button android:text="9" android:onClick="onButtonClick" android:layout_row="3" android:layout_column="2"/>
        <Button android:text="0" android:onClick="onButtonClick" android:layout_row="4" android:layout_column="1"/>

        <!-- Operator buttons -->
        <Button android:text="+" android:onClick="onButtonClick" android:layout_row="1" android:layout_column="3"/>
        <Button android:text="-" android:onClick="onButtonClick" android:layout_row="2" android:layout_column="3"/>
        <Button android:text="*" android:onClick="onButtonClick" android:layout_row="3" android:layout_column="3"/>
        <Button android:text="/" android:onClick="onButtonClick" android:layout_row="4" android:layout_column="3"/>
        <Button android:text="(" android:onClick="onButtonClick" android:layout_row="4" android:layout_column="0"/>
        <Button android:text=")" android:onClick="onButtonClick" android:layout_row="4" android:layout_column="2"/>
        <Button android:text="C" android:onClick="onClearClick" android:layout_row="0" android:layout_column="3"/>
        <Button android:text="=" android:onClick="onEqualsClick" android:layout_row="5" android:layout_columnSpan="4"/>
    </GridLayout>
</RelativeLayout>
